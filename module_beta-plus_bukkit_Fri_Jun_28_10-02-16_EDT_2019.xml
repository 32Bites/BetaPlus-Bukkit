<?xml version="1.0" encoding="UTF-8"?>
<project name="module_beta-plus_bukkit" default="compile.module.beta-plus_bukkit">
  <dirname property="module.beta-plus_bukkit.basedir" file="${ant.file.module_beta-plus_bukkit}"/>
  
  <property name="module.jdk.home.beta-plus_bukkit" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.beta-plus_bukkit" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.beta-plus_bukkit" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.beta-plus_bukkit" value="-encoding UTF-8 -source 1.8 -target 1.8 ${compiler.args}"/>
  
  <property name="beta-plus_bukkit.output.dir" value="${module.beta-plus_bukkit.basedir}/out/production/Beta-Plus_Bukkit"/>
  <property name="beta-plus_bukkit.testoutput.dir" value="${module.beta-plus_bukkit.basedir}/out/test/Beta-Plus_Bukkit"/>
  
  <path id="beta-plus_bukkit.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="beta-plus_bukkit.module.production.classpath">
    <path refid="${module.jdk.classpath.beta-plus_bukkit}"/>
    <pathelement location="${basedir}/../Bukkit src/spigot-api-1.14.3-R0.1-20190625.110359-1.jar"/>
    <pathelement location="${basedir}/../Bukkit src/spigot-1.14.3.jar"/>
  </path>
  
  <path id="beta-plus_bukkit.runtime.production.module.classpath">
    <pathelement location="${beta-plus_bukkit.output.dir}"/>
    <pathelement location="${basedir}/../Bukkit src/spigot-api-1.14.3-R0.1-20190625.110359-1.jar"/>
    <pathelement location="${basedir}/../Bukkit src/spigot-1.14.3.jar"/>
  </path>
  
  <path id="beta-plus_bukkit.module.classpath">
    <path refid="${module.jdk.classpath.beta-plus_bukkit}"/>
    <pathelement location="${beta-plus_bukkit.output.dir}"/>
    <pathelement location="${basedir}/../Bukkit src/spigot-api-1.14.3-R0.1-20190625.110359-1.jar"/>
    <pathelement location="${basedir}/../Bukkit src/spigot-1.14.3.jar"/>
  </path>
  
  <path id="beta-plus_bukkit.runtime.module.classpath">
    <pathelement location="${beta-plus_bukkit.testoutput.dir}"/>
    <pathelement location="${beta-plus_bukkit.output.dir}"/>
    <pathelement location="${basedir}/../Bukkit src/spigot-api-1.14.3-R0.1-20190625.110359-1.jar"/>
    <pathelement location="${basedir}/../Bukkit src/spigot-1.14.3.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.beta-plus_bukkit">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.beta-plus_bukkit">
    <patternset refid="excluded.from.module.beta-plus_bukkit"/>
  </patternset>
  
  <path id="beta-plus_bukkit.module.sourcepath">
    <dirset dir="${module.beta-plus_bukkit.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.beta-plus_bukkit" depends="compile.module.beta-plus_bukkit.production,compile.module.beta-plus_bukkit.tests" description="Compile module Beta-Plus_Bukkit"/>
  
  <target name="compile.module.beta-plus_bukkit.production" depends="register.custom.compilers" description="Compile module Beta-Plus_Bukkit; production classes">
    <mkdir dir="${beta-plus_bukkit.output.dir}"/>
    <javac2 destdir="${beta-plus_bukkit.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.beta-plus_bukkit}/javac">
      <compilerarg line="${compiler.args.beta-plus_bukkit}"/>
      <bootclasspath refid="beta-plus_bukkit.module.bootclasspath"/>
      <classpath refid="beta-plus_bukkit.module.production.classpath"/>
      <src refid="beta-plus_bukkit.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.beta-plus_bukkit"/>
    </javac2>
    
    <copy todir="${beta-plus_bukkit.output.dir}">
      <fileset dir="${module.beta-plus_bukkit.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.beta-plus_bukkit.tests" depends="register.custom.compilers,compile.module.beta-plus_bukkit.production" description="compile module Beta-Plus_Bukkit; test classes" unless="skip.tests"/>
  
  <target name="clean.module.beta-plus_bukkit" description="cleanup module">
    <delete dir="${beta-plus_bukkit.output.dir}"/>
    <delete dir="${beta-plus_bukkit.testoutput.dir}"/>
  </target>
</project>